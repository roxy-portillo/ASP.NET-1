@model IEnumerable<CRUD_Alumnos.Models.AlumnoCE>

@{
    ViewBag.Title = "Lista de Alumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2{
        color: blueviolet;
        border: 1px solid;
        border-color:chocolate;
        border-radius: 8px;
        width: 30%;
        background-color: azure;
        text-align: center;
    }

    .table th {
        background-color: palevioletred;
    }

    .table td {
        background-color: white;
       padding: 8px;
   
    }

    body {
        background-color: antiquewhite;
    }

</style>
<h2>Lista de Alumnos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Agregar")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Completo
        </th>
        <th>
            Edad
        </th>
        <th>
            Sexo
        </th>
        <th>
            Ciudad
        </th>
        <th>
            Fecha Alta
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NombreCompleto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Edad)
    </td>
    <td>
        @{
            if (item.Sexo == "F")
            {
                <span>Femenino</span>
            }
            else
            {
                <span>Masculino</span>
            }
        }


    </td>
    <td>
        @item.NombreCiudad
    </td>
    <td>
        @item.FechaRegistro.ToString()
    </td>
    <td>
        @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
        @Html.ActionLink("Detalles", "Detalles", new { id = item.Id }) |
        @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id }, new { @class = "aElimina" })
    </td>
</tr>
}

</table>

@section scripts{
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm('Estas seguro de eliminar ?')) {
                event.preventDefault();
            }
        });
    </script>
    
    }
